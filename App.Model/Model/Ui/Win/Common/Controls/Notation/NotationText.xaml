<UserControl x:Class="App.Win.NotationText" x:Name="NotationTextUc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
    <ScrollViewer Name="SV" PreviewKeyDown="rootPreviewKeyDown">
        <Border BorderBrush="Gray" BorderThickness="1" Padding="5,5,5,5" Background="{Binding ElementName=panel, Path=Background}">
            <WrapPanel Name="wrapPanel" PreviewMouseDown="rootPreviewMouseDown">
            </WrapPanel>
        </Border>
    </ScrollViewer>
</UserControl>
